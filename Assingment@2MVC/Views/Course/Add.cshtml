@model CourseViewModel

@{
    ViewData["Title"] = "Add an Course";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Add">

    <div class="mb-3">
        <label class="form-label" asp-for="Course.CourseName">Course Name</label>
        <span class="form-text text-danger" asp-validation-for="Course.CourseName"></span>
        <input type="text" class="form-control" asp-for="Course.CourseName" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Course.CourseInstructor">CourseInstructor</label>
        <span class="form-text text-danger" asp-validation-for="Course.CourseInstructor"></span>
        <input type="text" class="form-control" asp-for="Course.CourseInstructor" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Course.StartDate">Start Date</label>
        <span class="form-text text-danger" asp-validation-for="Course.StartDate"></span>
        <input type="date" class="form-control" asp-for="Course.StartDate" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Course.RoomNumber">Room Number</label>
        <span class="form-text text-danger" asp-validation-for="Course.RoomNumber"></span>
        <input type="text" class="form-control" asp-for="Course.RoomNumber" />
    </div>

    <input type="submit" class="btn btn-primary" value="Add" />
    <a class="btn btn-secondary" asp-controller="Course" asp-action="List">Cancel</a>
</form>